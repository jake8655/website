---
import Image from 'astro/components/Image.astro';

import Layout from '~/layouts/layout.astro';
import About from '~/sections/about.astro';

let age = new Date().getFullYear() - 2007;
if (new Date().getMonth() < 5 && new Date().getDate() < 26) {
  age--;
}
---

<Layout title='Home'>
  <main class='px-8 pt-64 lg:mx-auto lg:max-w-screen-xl lg:px-12 lg:pt-20'>
    <section
      class='flex flex-col-reverse items-center gap-12 lg:min-h-[40rem] lg:flex-row lg:items-start lg:justify-between'>
      <aside>
        <h1 class='text-5xl font-bold leading-tight lg:text-7xl'>
          Hi there! I'm <br />
          <span class='text-primary'>Dominik TÃ³th</span>.
        </h1>
        <p class='text-xl leading-normal'>
          A {age} year old <span class='text-primary-dark'>student</span> and
          <span class='text-primary-dark'>programming enthusiast</span>
          <br /> from Slovakia.
        </p>
      </aside>

      <a href='/'>
        <Image
          src='/images/ken.png'
          alt='Ken Kaneki profile'
          width={144}
          height={144}
          loading='eager'
          class='h-36 w-36 rounded-full border-4 border-primary-dark shadow-lg shadow-primary-dark'
        />
      </a>
    </section>

    <About />
  </main>
</Layout>
