---
import Image from 'astro/components/Image.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;

// TODO: make the hover effect on line 12 work
---

<div
  class='grid place-items-center duration-700 ease-out animate-in fade-in slide-in-from-top'>
  <div class='group flex gap-12'>
    <Image
      src='/images/arrow.svg'
      alt='Chevron arrows pointing down'
      width={50}
      height={50}
      loading='eager'
      class='animate-bounce duration-500 ease-out fill-mode-forwards repeat-[2] group-hover:-translate-y-12'
    />
    <h2 class='text-4xl font-semibold lg:text-6xl'>{title}</h2>
    <Image
      src='/images/arrow.svg'
      alt='Chevron arrows pointing down'
      width={50}
      height={50}
      loading='eager'
      class='animate-bounce duration-500 ease-out fill-mode-forwards repeat-[2]'
    />
  </div>
</div>
